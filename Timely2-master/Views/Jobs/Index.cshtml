@model IEnumerable<Job>
@{
    ViewData["Title"] = "Index";
}

<h1>Job</h1>
   <div class="container">
    <div class="text-end">
        <a asp-controller="Jobs" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>BaseSalary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var job in Model)
            {

                <tr>
                    <td>@job.Id</td>
                    <td>@job.Name</td>
                    <td>@job.BaseSalary</td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@job.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@job.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



