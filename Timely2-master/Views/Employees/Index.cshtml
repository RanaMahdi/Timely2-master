@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}
<h1>Employee</h1>
<div class="container">

    <div class="text-end mb-3">
        <a asp-controller="Employees" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Nationality</th>
                <th>Department</th>
                <th>Depatment Work</th>
                <th>Job</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Emp in Model)
            {
                <tr>
                    <td>@Emp.Id</td>
                    <td>@Emp.Name</td>
                    <td>@Emp.Phone</td>
                    <td>@Emp.Email</td>
                    <td>@Emp.Nationality?.Name</td>
                    <td>@Emp.Department?.Name</td>
                    <td>@Emp.DepartmentWorking?.Name</td>
                    <td>@Emp.Job?.Name</td>
                    <td>
                        <img src="@Emp.ImageUrl" width="200" height="150" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@Emp.Uid" class="btn btn-outline-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@Emp.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
