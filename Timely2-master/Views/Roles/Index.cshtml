@model IEnumerable<Role>
@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>
<div class="container">

    <div class="text-end">

        <a asp-controller="Roles" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>permission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var rol in Model)
            {

                <tr>
                    <td>@rol.Id</td>
                    <td>@rol.Name</td>
                    <td>@rol.Permission</td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@rol.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@rol.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

