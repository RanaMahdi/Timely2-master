@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<h1>User</h1>
<div class="container">

    <div class="text-end">
        <a asp-controller="Users" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Password</th>
                <th>Email</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var serv in Model)
            {
                <tr>
                    <td>@serv.Id</td>
                    <td>@serv.Name</td>
                    <td>@serv.Phone</td>
                    <td>@serv.Password</td>
                    <td>@serv.Email</td>
                    <td>@serv.Roles</td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@serv.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@serv.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
