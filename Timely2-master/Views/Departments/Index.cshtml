@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Department</h1>
<div class="container">

    <div class="text-end">
        <a asp-controller="Departments" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Id</td>
                    <td>@dept.Name</td>
                    <td>@dept.Description</td>
                    <td>
                        <img src="@dept.ImageUrl" width="200" height="150" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@dept.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@dept.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


