@model DepartmentWorking
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit DepartmentWorking</h1>

<form method="post" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input asp-for="Uid" hidden name="Uid" class="form-control" />
    <div>
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="StartTime" class="form-label"></label>
        <input asp-for="StartTime" name="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EndTime" class="form-label"></label>
        <input asp-for="EndTime" name="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="IsActive" class="form-label"></label>
        <select asp-for="IsActive" name="IsActive" class="form-control" asp-items="@ViewBag.Active">
            <option selected value="">-- Select IsActive --</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Day" class="form-label"></label>
        <input asp-for="Day" name="Day" class="form-control" />
        <span asp-validation-for="Day" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId" class="form-label"></label>
        <select asp-for="DepartmentId" name="DepartmentId" class="form-control" asp-items="@ViewBag.Departments">
            <option selected value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ServiceId" class="form-label"></label>
            <select asp-for="ServiceId" class="form-control" asp-items="@ViewBag.Services">
                <option selected value="">-- Select Service --</option>
            </select>
            <span asp-validation-for="ServiceId" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-outline-warning">Edit</button>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</form>



