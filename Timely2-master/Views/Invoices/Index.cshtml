@model IEnumerable<Invoice>
@{
    ViewData["Title"] = "Index";
}

<h1>Invoice</h1>
<div class="container">
    <div class="text-end">
    <a asp-controller="Invoices" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>InvoiceDate</th>
                <th>TotalAmount</th>
                <th>IsPaid</th>
                <th>Appointment</th>
                <th>Payment</th>
                <th>Client</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Invo in Model)
            {
                <tr>
                    <td>@Invo.Id</td>
                    <td>@Invo.InvoiceDate</td>
                    <td>@Invo.TotalAmount</td>
                    <td>@Invo.IsPaid</td>
                    <td>@Invo.Appointment?.Title</td>
                    <td>@Invo.Payment?.PaymentMethod</td>
                    <td>@Invo.Client?.Name</td>

                    <td>
                        <a asp-action="Edit" asp-route-Uid="@Invo.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@Invo.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


