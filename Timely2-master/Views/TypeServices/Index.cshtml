@model IEnumerable<TypeService>
@{
    ViewData["Title"] = "Index";
}
<h1>TypeService</h1>
<div class="container">

    <div class="text-end">
        <a asp-controller="TypeServices" asp-action="Create" class="btn btn-outline-primary">Add New</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var typserv in Model)
            {
                <tr>
                    <td>@typserv.Id</td>
                    <td>@typserv.Name</td>
                    <td>@typserv.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@typserv.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@typserv.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

